// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  
}

model User {
  id         Int      @id @default(autoincrement())
  firstName  String
  middleName String?
  lastName   String
  suffix     String?

  email      String   @unique
  password   String
  status     String   @default("active")

  // FIX: Relation updated to point to "Section"
  sectionId  Int?
  section    Section? @relation(fields: [sectionId], references: [id])

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("user")
}

model Section {
  id        Int      @id @default(autoincrement())
  
  // FIX: Added @unique so we can "Find or Create" safely
  name      String   @unique 

  users     User[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("section")
}